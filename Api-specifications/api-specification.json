{
  "openapi": "3.0.2",
  "info": {
    "title": "Shoping Cart RestFul Api",
    "version": "1.0",
    "description": "Api for shoping cart RestFul API",
    "contact": {
      "name": "Dedi Syaputra",
      "email": "dedisyaputra611@gmail.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3200/{environtment}/api/v1",
      "description": "Shoping cart RestFul Api server",
      "variables": {
        "environtment": {
          "default": "dev",
          "description": "Server environtment",
          "enum": ["dev", "qa", "prod"]
        }
      }
    }
  ],
  "paths": {
    "/register": {
      "post": {
        "summary": "create new users",
        "responses": {},
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "minLength": 4,
                    "maxLength": 100,
                    "required": ["true"]
                  },
                  "email": {
                    "type": "string",
                    "minLength": 8,
                    "maxLength": 100,
                    "required": ["true"]
                  },
                  "password": {
                    "type": "string",
                    "minLength": 8,
                    "required": ["true"]
                  },
                  "phone_number": {
                    "type": "number",
                    "minLength": 12,
                    "maxLength": 12,
                    "required": ["true"]
                  },
                  "address": {
                    "type": "object",
                    "properties": {
                      "city": {
                        "type": "string",
                        "minLength": 4,
                        "required": ["true"]
                      },
                      "street": {
                        "type": "string",
                        "minLength": 4,
                        "required": ["true"]
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/login": {
      "post": {
        "summary": "login for users",
        "description": "api for login users",
        "responses": {},
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "minLength": 8,
                    "required": ["true"]
                  },
                  "password": {
                    "type": "string",
                    "minLength": 8,
                    "required": ["true"]
                  }
                }
              }
            }
          }
        }
      }
    },
    "/products": {
      "get": { "summary": "get all data products", "responses": {} }
    },
    "/products/{productName}": {
      "get": {
        "summary": "get specific product data",
        "responses": {},
        "parameters": [
          {
            "name": "productName",
            "in": "path",
            "required": true,
            "description": "productName for get specific product",
            "schema": {
              "type": "string",
              "minLength": 4,
              "maxLength": 100
            }
          }
        ]
      },
      "post": {
        "summary": "add product to cart",
        "responses": {},
        "parameters": [
          {
            "name": "productName",
            "in": "path",
            "required": true,
            "description": "productName for add specific product to cart",
            "schema": { "type": "string", "minLength": 4, "maxLength": 100 }
          }
        ]
      }
    },
    "/cart": {
      "get": { "summary": "get all data cart", "responses": {} }
    },
    "/cart/address": {
      "post": {
        "summary": "create address for product data",
        "responses": {},
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "address": {
                    "type": "object",
                    "properties": {
                      "city": {
                        "type": "string",
                        "minLength": 4,
                        "required": ["true"]
                      },
                      "street": {
                        "type": "string",
                        "minLength": 4,
                        "required": ["true"]
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/cart/{productName}": {
      "delete": {
        "summary": "delete specific product",
        "responses": {},
        "parameters": [
          {
            "name": "productName",
            "in": "path",
            "required": true,
            "description": "productName for delete specific product from cart",
            "schema": { "type": "string", "minLength": 4, "maxLength": 100 }
          }
        ]
      }
    },
    "/cart/checkout": {
      "post": {
        "summary": "checkout product from cart",
        "responses": {},
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "total_product": {
                    "type": "number",
                    "minLength": 1,
                    "required": ["true"]
                  },
                  "price": { "type": "number", "required": ["true"] },
                  "address": {
                    "type": "object",
                    "properties": {
                      "city": {
                        "type": "string",
                        "minLength": 4,
                        "required": ["true"]
                      },
                      "street": {
                        "type": "string",
                        "minLength": 4,
                        "required": ["true"]
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
